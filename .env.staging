# Staging Environment (Railway - develop branch)
NODE_ENV=staging
PORT=3000

# Database - PostgreSQL (via Railway)
# DATABASE_URL wordt automatisch gezet door Railway

# ZwiftRacing API
ZWIFT_API_KEY=650c6d2fc4ef6858d74cbef1
ZWIFT_API_BASE_URL=https://zwift-ranking.herokuapp.com
ZWIFT_CLUB_ID=2281

# Authentication (optioneel in staging - test Firebase hier)
AUTH_ENABLED=false  # Set naar 'true' om Firebase Auth te testen
AUTH_METHOD=firebase  # 'firebase' or 'basic'

# Firebase (optioneel - voor staging tests)
# FIREBASE_PROJECT_ID=zwiftracingcloud9
# FIREBASE_PRIVATE_KEY="..."
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@zwiftracingcloud9.iam.gserviceaccount.com
API_USERNAME=staging-admin
API_PASSWORD=staging-test-123

# Auto Sync - UIT (handmatig testen)
ENABLE_AUTO_SYNC=false
SCHEDULER_ENABLED=false

# Cron Jobs (indien je ze wilt testen)
FAVORITES_SYNC_CRON=0 */6 * * *
CLUB_SYNC_CRON=0 */12 * * *
FORWARD_SCAN_CRON=0 * * * *
CLEANUP_CRON=0 3 * * *

# SmartScheduler
SCHEDULER_P1_INTERVAL=15
SCHEDULER_P2_INTERVAL=30
SCHEDULER_P3_INTERVAL=60
SCHEDULER_P4_INTERVAL=120

# Logging - Debug level voor troubleshooting
LOG_LEVEL=debug

# CORS - Allow all voor testing
ALLOWED_ORIGINS=*

# Health Check
HEALTH_CHECK_ENABLED=true
