# Zwift API Configuration
ZWIFT_API_KEY=your_api_key_here
ZWIFT_API_BASE_URL=https://zwift-ranking.herokuapp.com
ZWIFT_CLUB_ID=11818

# Database (Prisma)
DATABASE_URL="file:./dev.db"

# Supabase Configuration (Production)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_service_key_here
SUPABASE_ANON_KEY=your_anon_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Sync Configuration (Configureerbaar)
SYNC_INTERVAL_MINUTES=60
SYNC_INTERVAL_HOURS=1
SYNC_CRON_SCHEDULE="0 * * * *"
MAX_RETRIES=3
ENABLE_AUTO_SYNC=false

# Event Scraping Configuration (MVP Feature)
EVENT_SCRAPING_ENABLED=false
EVENT_SCRAPING_DAYS=90
