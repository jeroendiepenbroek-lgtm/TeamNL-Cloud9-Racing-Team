{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "dockerfilePath": "backend/Dockerfile"
  },
  "deploy": {
    "startCommand": "cd backend && npx tsx src/server.ts",
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 10
  }
}
