# ============================================================================
# NUCLEAR OPTION - Absolute simplest Dockerfile possible
# NO optimization, NO caching, JUST WORKS
# ============================================================================

FROM node:22

WORKDIR /app

# Copy everything first
COPY . .

# Install EVERYTHING fresh - no tricks, no optimization
RUN npm install

# Environment
ENV NODE_ENV=production
ENV PORT=3000

EXPOSE 3000

# Just run it
CMD ["npm", "start"]
