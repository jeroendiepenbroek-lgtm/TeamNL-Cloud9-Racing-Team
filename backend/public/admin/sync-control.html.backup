<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sync Control Center - TeamNL Cloud9</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background: linear-gradient(135deg, #1e3a8a 0%, #7c3aed 50%, #ec4899 100%);
            min-height: 100vh;
            padding: 20px;
            position: relative;
            overflow-x: hidden;
        }

        /* Animated background particles */
        .particles {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 0;
        }

        .particle {
            position: absolute;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            animation: float 10s infinite ease-in-out;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0) translateX(0); }
            50% { transform: translateY(-30px) translateX(20px); }
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            position: relative;
            z-index: 1;
        }

        /* Header */
        header {
            text-align: center;
            color: white;
            margin-bottom: 40px;
            animation: fadeInDown 0.6s ease;
        }

        @keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        h1 {
            font-size: 3rem;
            margin-bottom: 10px;
            text-shadow: 2px 2px 8px rgba(0,0,0,0.3);
            background: linear-gradient(90deg, #fff, #e0e7ff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .subtitle {
            font-size: 1.2rem;
            opacity: 0.9;
            text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
        }

        /* Status bar */
        .status-bar {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(20px);
            border-radius: 16px;
            padding: 20px;
            margin-bottom: 30px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            animation: fadeIn 0.8s ease 0.2s both;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: scale(0.95); }
            to { opacity: 1; transform: scale(1); }
        }

        .status-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 15px;
            color: white;
        }

        .status-item {
            text-align: center;
        }

        .status-label {
            font-size: 0.85rem;
            opacity: 0.8;
            margin-bottom: 5px;
        }

        .status-value {
            font-size: 1.5rem;
            font-weight: 700;
        }

        /* Sync cards grid */
        .sync-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 24px;
            margin-bottom: 40px;
        }

        .sync-card {
            background: rgba(255, 255, 255, 0.12);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 28px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            transition: all 0.3s ease;
            animation: fadeIn 0.8s ease both;
            position: relative;
            overflow: hidden;
        }

        .sync-card:nth-child(1) { animation-delay: 0.1s; }
        .sync-card:nth-child(2) { animation-delay: 0.2s; }
        .sync-card:nth-child(3) { animation-delay: 0.3s; }
        .sync-card:nth-child(4) { animation-delay: 0.4s; }

        .sync-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #60a5fa, #c084fc);
        }

        .sync-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.3);
            border-color: rgba(255, 255, 255, 0.4);
        }

        .sync-header {
            display: flex;
            align-items: center;
            margin-bottom: 16px;
        }

        .sync-icon {
            font-size: 2.5rem;
            margin-right: 15px;
            filter: drop-shadow(0 2px 4px rgba(0,0,0,0.2));
        }

        .sync-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: white;
            text-shadow: 1px 1px 3px rgba(0,0,0,0.3);
        }

        .sync-description {
            color: rgba(255, 255, 255, 0.85);
            font-size: 0.95rem;
            margin-bottom: 16px;
            line-height: 1.5;
        }

        .sync-meta {
            display: flex;
            flex-direction: column;
            gap: 10px;
            margin-bottom: 20px;
            font-size: 0.9rem;
            color: rgba(255, 255, 255, 0.9);
        }

        .meta-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .meta-label {
            opacity: 0.8;
        }

        .meta-value {
            font-weight: 600;
            background: rgba(255, 255, 255, 0.15);
            padding: 4px 12px;
            border-radius: 8px;
        }

        /* Trigger button */
        .trigger-btn {
            width: 100%;
            padding: 14px;
            font-size: 1rem;
            font-weight: 600;
            border: none;
            border-radius: 12px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            position: relative;
            overflow: hidden;
        }

        .trigger-btn.ready {
            background: linear-gradient(135deg, #10b981, #059669);
            color: white;
            box-shadow: 0 4px 15px rgba(16, 185, 129, 0.4);
        }

        .trigger-btn.ready:hover {
            transform: scale(1.02);
            box-shadow: 0 6px 20px rgba(16, 185, 129, 0.5);
        }

        .trigger-btn.ready:active {
            transform: scale(0.98);
        }

        .trigger-btn.cooldown {
            background: rgba(107, 114, 128, 0.3);
            color: rgba(255, 255, 255, 0.6);
            cursor: not-allowed;
        }

        .trigger-btn.loading {
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            color: white;
            cursor: wait;
        }

        .trigger-btn::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.3);
            transform: translate(-50%, -50%);
            transition: width 0.6s, height 0.6s;
        }

        .trigger-btn:active::before {
            width: 300px;
            height: 300px;
        }

        /* Cooldown progress bar */
        .cooldown-bar {
            margin-top: 10px;
            height: 6px;
            background: rgba(255, 255, 255, 0.15);
            border-radius: 3px;
            overflow: hidden;
            display: none;
        }

        .cooldown-bar.active {
            display: block;
        }

        .cooldown-progress {
            height: 100%;
            background: linear-gradient(90deg, #f59e0b, #ef4444);
            transition: width 0.3s ease;
            border-radius: 3px;
        }

        /* Toast notifications */
        .toast {
            position: fixed;
            bottom: 30px;
            right: 30px;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            padding: 16px 24px;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
            display: flex;
            align-items: center;
            gap: 12px;
            animation: slideIn 0.3s ease;
            z-index: 1000;
            max-width: 400px;
        }

        @keyframes slideIn {
            from {
                transform: translateX(400px);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        .toast.success {
            border-left: 4px solid #10b981;
        }

        .toast.error {
            border-left: 4px solid #ef4444;
        }

        .toast.warning {
            border-left: 4px solid #f59e0b;
        }

        .toast-icon {
            font-size: 1.5rem;
        }

        .toast-content {
            flex: 1;
        }

        .toast-title {
            font-weight: 600;
            margin-bottom: 4px;
            color: #1f2937;
        }

        .toast-message {
            font-size: 0.9rem;
            color: #6b7280;
        }

        /* Loading spinner */
        .spinner {
            display: inline-block;
            width: 18px;
            height: 18px;
            border: 3px solid rgba(255,255,255,0.3);
            border-top-color: white;
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
            margin-right: 8px;
        }

        @keyframes spin {
            to { transform: rotate(360deg); }
        }

        /* Back button */
        .back-btn {
            position: fixed;
            top: 20px;
            left: 20px;
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(10px);
            color: white;
            border: 1px solid rgba(255, 255, 255, 0.2);
            padding: 12px 20px;
            border-radius: 12px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
            z-index: 100;
        }

        .back-btn:hover {
            background: rgba(255, 255, 255, 0.25);
            transform: translateX(-3px);
        }

        /* Responsive */
        @media (max-width: 768px) {
            h1 { font-size: 2rem; }
            .sync-grid { grid-template-columns: 1fr; }
            .toast { right: 20px; left: 20px; max-width: none; }
        }
    </style>
</head>
<body>
    <div class="particles" id="particles"></div>
    
    <a href="/admin" class="back-btn">
        ‚Üê Dashboard
    </a>

    <div class="container">
        <header>
            <h1>üéÆ Sync Control Center</h1>
            <p class="subtitle">Real-time synchronisatie beheer voor alle data services</p>
        </header>

        <div class="status-bar">
            <div class="status-grid">
                <div class="status-item">
                    <div class="status-label">System Status</div>
                    <div class="status-value" id="systemStatus">‚óè</div>
                </div>
                <div class="status-item">
                    <div class="status-label">Last Update</div>
                    <div class="status-value" id="lastUpdate">--:--:--</div>
                </div>
                <div class="status-item">
                    <div class="status-label">Active Syncs</div>
                    <div class="status-value" id="activeSyncs">0</div>
                </div>
                <div class="status-item">
                    <div class="status-label">Uptime</div>
                    <div class="status-value" id="uptime">100%</div>
                </div>
            </div>
        </div>

        <div class="sync-grid" id="syncGrid">
            <!-- Sync cards will be injected here -->
        </div>
    </div>

    <script>
        // Configuration
        const API_BASE = '/api/sync-control';
        let activeSyncs = 0;

        // Initialize particles
        function createParticles() {
            const container = document.getElementById('particles');
            for (let i = 0; i < 30; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.width = Math.random() * 6 + 2 + 'px';
                particle.style.height = particle.style.width;
                particle.style.left = Math.random() * 100 + '%';
                particle.style.top = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 10 + 's';
                particle.style.animationDuration = Math.random() * 10 + 10 + 's';
                container.appendChild(particle);
            }
        }

        // Service configurations
        const services = [
            {
                key: 'riders',
                icon: 'üë•',
                title: 'Riders Sync',
                color: '#3b82f6'
            },
            {
                key: 'results',
                icon: 'üèÜ',
                title: 'Results Sync',
                color: '#f59e0b'
            },
            {
                key: 'nearEvents',
                icon: 'üìÖ',
                title: 'Near Events',
                color: '#10b981'
            },
            {
                key: 'farEvents',
                icon: 'üóìÔ∏è',
                title: 'Far Events',
                color: '#8b5cf6'
            }
        ];

        // Render sync cards
        function renderSyncCards(statusData) {
            const grid = document.getElementById('syncGrid');
            grid.innerHTML = '';

            services.forEach(service => {
                const serviceData = statusData.services[service.key];
                if (!serviceData) return;

                const card = document.createElement('div');
                card.className = 'sync-card';
                
                const lastSync = serviceData.lastSync 
                    ? new Date(serviceData.lastSync).toLocaleTimeString('nl-NL')
                    : 'Nog niet gesynchroniseerd';
                
                const cooldownMinutes = Math.ceil(serviceData.cooldownRemaining / 60000);
                const cooldownPercent = serviceData.cooldownRemaining > 0 
                    ? ((serviceData.cooldownRemaining / getServiceCooldown(service.key)) * 100).toFixed(0)
                    : 0;

                card.innerHTML = `
                    <div class="sync-header">
                        <div class="sync-icon">${service.icon}</div>
                        <div class="sync-title">${serviceData.name}</div>
                    </div>
                    <div class="sync-description">${serviceData.description}</div>
                    <div class="sync-meta">
                        <div class="meta-row">
                            <span class="meta-label">Schema:</span>
                            <span class="meta-value">${serviceData.schedule}</span>
                        </div>
                        <div class="meta-row">
                            <span class="meta-label">Laatste sync:</span>
                            <span class="meta-value">${lastSync}</span>
                        </div>
                    </div>
                    <button 
                        class="trigger-btn ${serviceData.canTrigger ? 'ready' : 'cooldown'}"
                        onclick="triggerSync('${service.key}')"
                        ${!serviceData.canTrigger ? 'disabled' : ''}
                    >
                        ${serviceData.canTrigger 
                            ? '‚ñ∂Ô∏è Start Sync Nu' 
                            : `‚è≥ Cooldown ${cooldownMinutes}min`
                        }
                    </button>
                    <div class="cooldown-bar ${!serviceData.canTrigger ? 'active' : ''}">
                        <div class="cooldown-progress" style="width: ${cooldownPercent}%"></div>
                    </div>
                `;
                
                grid.appendChild(card);
            });
        }

        // Get cooldown for service (milliseconds)
        function getServiceCooldown(key) {
            const cooldowns = {
                riders: 5 * 60 * 1000,
                results: 10 * 60 * 1000,
                nearEvents: 2 * 60 * 1000,
                farEvents: 30 * 60 * 1000
            };
            return cooldowns[key] || 60000;
        }

        // Fetch status
        async function fetchStatus() {
            try {
                const response = await fetch(`${API_BASE}/status`);
                const data = await response.json();
                
                if (data.success) {
                    renderSyncCards(data);
                    updateStatusBar();
                }
            } catch (error) {
                console.error('Failed to fetch status:', error);
                showToast('error', 'Verbinding Fout', 'Kan status niet ophalen');
            }
        }

        // Trigger sync
        async function triggerSync(service) {
            const btn = event.target;
            if (btn.disabled) return;
            
            btn.disabled = true;
            btn.classList.remove('ready');
            btn.classList.add('loading');
            btn.innerHTML = '<span class="spinner"></span>Syncing...';
            
            activeSyncs++;
            updateStatusBar();

            try {
                const response = await fetch(`${API_BASE}/trigger/${service}`, {
                    method: 'POST'
                });
                const data = await response.json();
                
                if (data.success) {
                    showToast('success', 'Sync Gestart', data.message);
                    setTimeout(fetchStatus, 1000);
                } else {
                    showToast('error', 'Sync Fout', data.message || data.error);
                    btn.classList.remove('loading');
                    btn.classList.add('ready');
                    btn.disabled = false;
                    btn.innerHTML = '‚ñ∂Ô∏è Start Sync Nu';
                }
            } catch (error) {
                showToast('error', 'Netwerk Fout', 'Kan sync niet starten');
                btn.classList.remove('loading');
                btn.classList.add('ready');
                btn.disabled = false;
                btn.innerHTML = '‚ñ∂Ô∏è Start Sync Nu';
            } finally {
                activeSyncs = Math.max(0, activeSyncs - 1);
                updateStatusBar();
            }
        }

        // Update status bar
        function updateStatusBar() {
            document.getElementById('systemStatus').textContent = '‚óè';
            document.getElementById('systemStatus').style.color = '#10b981';
            document.getElementById('lastUpdate').textContent = new Date().toLocaleTimeString('nl-NL');
            document.getElementById('activeSyncs').textContent = activeSyncs;
        }

        // Show toast notification
        function showToast(type, title, message) {
            const toast = document.createElement('div');
            toast.className = `toast ${type}`;
            
            const icons = {
                success: '‚úÖ',
                error: '‚ùå',
                warning: '‚ö†Ô∏è'
            };
            
            toast.innerHTML = `
                <div class="toast-icon">${icons[type]}</div>
                <div class="toast-content">
                    <div class="toast-title">${title}</div>
                    <div class="toast-message">${message}</div>
                </div>
            `;
            
            document.body.appendChild(toast);
            
            setTimeout(() => {
                toast.style.animation = 'slideIn 0.3s ease reverse';
                setTimeout(() => toast.remove(), 300);
            }, 5000);
        }

        // Initialize
        createParticles();
        fetchStatus();
        
        // Auto-refresh every 10 seconds
        setInterval(fetchStatus, 10000);
    </script>
</body>
</html>
