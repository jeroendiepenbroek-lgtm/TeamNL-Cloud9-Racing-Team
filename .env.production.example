# ===================================
# PRODUCTION ENVIRONMENT VARIABLES
# ===================================
# Copy to .env.production en vul echte waarden in

# Database Configuration (PostgreSQL)
DATABASE_URL="postgresql://user:password@host:5432/database"

# Server Configuration
NODE_ENV=production
PORT=3000

# Authentication (VERPLICHT IN PRODUCTIE!)
AUTH_ENABLED=true
AUTH_METHOD=firebase  # 'firebase' or 'basic'

# Firebase Authentication (als AUTH_METHOD=firebase)
FIREBASE_PROJECT_ID=zwiftracingcloud9
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@zwiftracingcloud9.iam.gserviceaccount.com

# Basic Auth (als AUTH_METHOD=basic - legacy)
API_USERNAME=admin
API_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
# API_KEY=your-secret-api-key-here  # Alternatief voor Basic Auth

# CORS Configuration
ALLOWED_ORIGINS=https://zwiftracingcloud9.web.app,https://zwiftracingcloud9.firebaseapp.com

# ZwiftRacing API Configuration
ZWIFT_API_KEY=650c6d2fc4ef6858d74cbef1
ZWIFT_API_BASE_URL=https://zwift-ranking.herokuapp.com
ZWIFT_CLUB_ID=2281

# Data Sync Configuration
SYNC_INTERVAL_MINUTES=60
ENABLE_AUTO_SYNC=true

# Scheduler Cron Configuration
FAVORITES_SYNC_CRON=0 */6 * * *        # Elke 6 uur
CLUB_SYNC_CRON=0 */12 * * *            # Elke 12 uur
FORWARD_SCAN_CRON=0 * * * *            # Elk uur
FORWARD_SCAN_MAX_EVENTS=10             # 10 events/uur
CLEANUP_CRON=0 3 * * *                 # Dagelijks om 03:00

# SmartScheduler Configuration
SCHEDULER_ENABLED=true
SCHEDULER_P1_INTERVAL=15    # Priority 1 riders: elke 15 min
SCHEDULER_P2_INTERVAL=30    # Priority 2 riders: elke 30 min
SCHEDULER_P3_INTERVAL=60    # Priority 3 riders: elk uur
SCHEDULER_P4_INTERVAL=120   # Priority 4 riders: elke 2 uur

# Logging
LOG_LEVEL=info  # production: info, development: debug

# Health Check
HEALTH_CHECK_ENABLED=true
